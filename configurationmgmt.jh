// defining multiple oneToOne relationships
relationship OneToOne {
	ConfigurationFile{componentName} to ComponentMaster{componentName},
    ConfigurationFile{hostName} to Host{hostName}
}

// Set pagination options
paginate Role, EnvironmentMaster, ConfigurationFile, ComponentMaster, Host, UserMaster, Layer, OS, OSVersion  with infinite-scroll
//paginate with pagination

